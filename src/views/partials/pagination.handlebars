<nav aria-label="Page navigation">
    <ul class="pagination justify-content-center">

        {{!-- First Page --}}
        <li class="page-item {{#if (eq currentPage 1)}}disabled{{/if}}">
            <a class="page-link" href="/products/page/1" aria-label="First">
                <span aria-hidden="true">&laquo;&laquo;</span>
            </a>
        </li>

        {{!-- Previous Page --}}
        <li class="page-item {{#if (eq currentPage 1)}}disabled{{/if}}">
            <a class="page-link" href="/products/page/{{subtract currentPage 1}}" aria-label="Previous">
                <span aria-hidden="true">&laquo;</span>
            </a>
        </li>

        {{!-- Page Numbers --}}
        {{#each pagination}}
        <li class="page-item {{#if (eq this ../currentPage)}}active{{/if}}">
            <a class="page-link" href="/products/page/{{this}}">{{this}}</a>
        </li>
        {{/each}}

        {{!-- Next Page --}}
        <li class="page-item {{#if (eq currentPage totalPages)}}disabled{{/if}}">
            <a class="page-link" href="/products/page/{{add currentPage 1}}" aria-label="Next">
                <span aria-hidden="true">&raquo;</span>
            </a>
        </li>

        {{!-- Last Page --}}
        <li class="page-item {{#if (eq currentPage totalPages)}}disabled{{/if}}">
            <a class="page-link" href="/products/page/{{totalPages}}" aria-label="Last">
                <span aria-hidden="true">&raquo;&raquo;</span>
            </a>
        </li>
    </ul>
</nav>