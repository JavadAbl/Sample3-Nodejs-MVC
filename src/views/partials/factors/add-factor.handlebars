<form action="/products/create" method="post" class="p-2 border rounded-3 shadow-sm mt-2">
    <div class="row mb-4 g-2">
        <!-- Line 1 -->
        <div class="col-12">
            <div class="form-floating">
                <input type="text" class="form-control" id="name" name="name" placeholder=" " required>
                <label for="name" class="text-muted">
                    <i class="bi bi-tag-fill me-2 text-secondary"></i>نام محصول
                </label>
            </div>
        </div>




        <!-- Line 2 -->
        <div class="col-6">
            <div class="form-floating">
                <input type="number" class="form-control" id="price" name="price" placeholder=" " required>
                <label for="price" class="text-muted">
                    <i class="bi bi-currency-dollar me-2 text-secondary"></i>قیمت
                </label>
            </div>
        </div>


        <div class="col-6">
            <div class="form-floating">
                <input type="number" class="form-control" id="stock" name="stock" placeholder=" " required>
                <label for="stock" class="text-muted">
                    <i class="bi bi-box2-fill me-2 text-secondary"></i>تعداد موجود
                </label>
            </div>
        </div>


        <div class="col-12 ">
            <label for="image" class="text-muted mb-2">
                <i class="bi bi-image-fill me-2 text-secondary"></i>عکس
            </label>

            <input type="file" class="form-control" accept="image/*" multiple="false" id="image" name="image">

        </div>



        <!-- Line 3 - Description -->
        <div class="mb-4">
            <label for="description" class="form-label text-muted">
                <i class="bi bi-card-text me-2 text-secondary"></i>توضیحات
            </label>
            <textarea class="form-control" id="description" name="description" rows="4"
                style="min-height: 100px;"></textarea>
            <div class="form-text">توضیحات جزئیات محصول</div>
        </div>

    </div>

    <div class="d-flex justify-content-between mt-4">
        <button type="reset" class="btn btn-outline-secondary px-4">
            <i class="bi bi-eraser me-2"></i>Clear
        </button>
        <button type="submit" class="btn btn-primary px-4">
            <i class="bi bi-save me-2"></i>Create Product
        </button>
    </div>
</form>



