<div style="max-height: 40rem;" class="col-12 col-md-6 col-lg-4 col-xl-3  mb-4 ">
    <div class="card">
        <img src="{{#if image}}{{image}}{{else}}/images/product.png{{/if}}" class="card-img-top "
            style="aspect-ratio: 1/1; width: 100%;" alt={{name}}>
        <div class="card-body">
            <h5 class="card-title">{{name}}</h5>
            <p class="card-text">{{description}}</p>
            <p class="card-text"><strong>{{numberToLocaleString price}} ریال</strong></p>
            <a href="#" class="btn btn-primary btn-sm">سفارش فاکتور</a>
        </div>
    </div>
</div>